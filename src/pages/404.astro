---
import Layout from "../layouts/Layout.astro";
import { ExternalLink } from "lucide-astro";
---

<Layout title="404 - Page Not Found" noindex={true}>
  <div class="min-h-[70vh] flex items-center justify-center py-16">
    <div class="text-center max-w-md mx-auto px-4">
      <div class="relative inline-block mb-12">
        <!-- Soft glow background -->
        <div class="absolute inset-0 bg-stone-200/25 dark:bg-stone-800/20 rounded-3xl blur-2xl"></div>
        
        <!-- Blueprint container -->
        <div class="relative blueprint-container bg-stone-100/30 dark:bg-stone-900/25 rounded-2xl p-8 border border-stone-300/25 dark:border-stone-700/25 shadow-sm">
          <!-- Corner markers -->
          <div class="corner-marker corner-tr"></div>
          <div class="corner-marker corner-bl"></div>
          
          <img 
            src="/404easter.jpg" 
            alt="404 Easter Egg"
            class="w-96 h-96 mx-auto object-cover transition-all duration-300 hover:scale-105 relative z-10 shadow-lg rounded-xl dark:brightness-[0.65] dark:contrast-[1.3]"
          />
          
          <!-- Artist credit icon -->
          <a 
            href="https://www.weibo.com/u/3722034814" 
            target="_blank"
            rel="noopener noreferrer"
            class="absolute bottom-3 right-3 opacity-40 hover:opacity-100 transition-opacity duration-200 z-20"
            title="Artwork by original artist"
          >
            <ExternalLink class="w-3.5 h-3.5 text-stone-500 dark:text-stone-400" />
          </a>
        </div>
      </div>
      
      <div class="space-y-6">
        <div class="font-mono text-sm opacity-50 tracking-wider">404</div>
        <div class="font-mono text-xl opacity-80">Page Not Found</div>
        <div class="pt-4">
          <a 
            href="/" 
            class="inline-block font-mono text-sm opacity-60 hover:opacity-100 transition-opacity"
          >
            ‚Üê Return to Index
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Blueprint grid background */
  .blueprint-container {
    background-image: 
      linear-gradient(rgba(100, 90, 80, 0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(100, 90, 80, 0.06) 1px, transparent 1px);
    background-size: 20px 20px;
  }
  
  :global(.dark) .blueprint-container {
    background-image: 
      linear-gradient(rgba(230, 228, 217, 0.08) 1px, transparent 1px),
      linear-gradient(90deg, rgba(230, 228, 217, 0.08) 1px, transparent 1px);
  }
  
  /* Corner markers */
  .corner-marker {
    position: absolute;
    width: 20px;
    height: 20px;
    border: 2px dashed rgba(100, 90, 80, 0.25);
  }
  
  :global(.dark) .corner-marker {
    border-color: rgba(230, 228, 217, 0.25);
  }
  
  .corner-tr {
    top: 12px;
    right: 12px;
    border-left: none;
    border-bottom: none;
  }
  
  .corner-bl {
    bottom: 12px;
    left: 12px;
    border-right: none;
    border-top: none;
  }
</style>
